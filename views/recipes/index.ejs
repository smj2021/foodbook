<%- include('./../partials/html-head') %>
    <%- include('./../partials/nav') %>

        <header>
            <h1>
                <%= title %>
            </h1>
            <h3>Take a gander at your personal cookbook! If you haven't added any recipes go ahead and click Add Recipe
                in the nav bar and get started!</h3>
        </header>


        <main>
            <% if(recipes.length> 0){ %>
                <div class="container px-5 ">
                    <div class="container row row-cols-4 row-cols-md-4 row-cols-xl-4 g1 gx-auto">
                        <% recipes.forEach((recipe)=> { %>
                            <div class="col-sm-5 col-md-4 col-lg-3 col-xl-2 mx-auto px-auto">
                                <div class="card mb-5" style="width:20rem;">
                                    <div>
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= recipe.name%>
                                            </h5>
                                            <h5 class="card-title">
                                                <%= recipe.cuisine %>
                                            </h5>
                                            <h5 class="card-title">
                                                <%= recipe.difficulty %>
                                            </h5>
                                            <h5 class="card-title"></h5>
                                            <p class="card-text">
                                                <%= recipe.preptime %>
                                            </p>
                                            <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">DETAILS</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>
                </div>
        </main>













        <%- include('./../partials/footer') %>