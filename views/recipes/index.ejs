<%- include('./../partials/html-head') %>
    <%- include('./../partials/nav') %>

        <header>
            <h1>
                <%= title %>
            </h1>
        </header>


        <main class="">
            <% if(recipes.length> 0){ %>
                <div class="container py-5 px-3">
                    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-2 g1 px-4">
                        <% recipes.forEach((recipe)=> { %>
                            <div class="card mb-3" style="width:18rem;">
                                <div class="row g-0">
                                    <div class="">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= recipe.name%>
                                            </h5>
                                            <h5 class="card-title">
                                                <%= recipe.cuisine %>
                                            </h5>
                                            <h5 class="card-title">
                                                <%= recipe.difficulty %>
                                            </h5>
                                            <h5 class="card-title"></h5>
                                            <p class="card-text">
                                                <%= recipe.preptime %>
                                            </p>
                                            <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">DETAILS</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>
                </div>
        </main>













        <%- include('./../partials/footer') %>