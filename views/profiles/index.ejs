<%- include('./../partials/html-head') %>
    <%- include('./../partials/nav') %>

    <main>
        <div class="container">
            <div>
                <% profiles.forEach(function(profile){ %>
                    <div>
                        <a href="/profiles/<%= profile._id %>">
                            <div>
                                <% if (profile.avatar) { %>
                                    <img src="<%= profile.avatar %>" alt="<%= profile.name%>'s avatar" />

                                    <% } else { %>
                                        <img src="/images/icons/user.png" alt="placeholder" />
                                        <% } %>
                                            <div class="body">
                                                <p class="title">
                                                    <%= profile.name %>
                                                </p>
                                            </div>
                            </div>
                        </a>
                    </div>
                    <% }) %>

            </div>
        </div>
    </main>


    <%- include('./../partials/footer') %>