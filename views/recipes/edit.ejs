<%- include('./../partials/html-head') %>
    <%- include('./../partials/nav') %>

        <header>
            <h1>
                <%= title %>
            </h1>
        </header>
        <main class="mx-auto">
            <div>
                <form class="container-sm mx-auto" action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
                    <div>
                        <label style="font-size:16px;" for="name-input" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name-input" name="name" value="<%= recipe.name %> ">
                    </div>
                    <div>
                        <label style="font-size:16px;" for="cuisine-input" class="form-label">Cuisine</label>
                        <input type="text" class="form-control" id="name-input" name="cuisine"
                            value="<%= recipe.cuisine %>">
                    </div>
                    <div>
                        <label style="font-size:16px;" for="difficulty-input">Difficulty:</label>
                        <select name="difficulty" id>
                            <option value="Jamie Oliver (Easy)">Jamie Oliver(Easy)</option>
                            <option value="Guy Fieri (Medium)">Guy Fieri(Medium)</option>
                            <option value="Bobby Flay (Hard)">Bobby Flay(Hard)</option>
                            <option value="Gordon Ramsay (Advanced)">Gordon Ramsay(Advanced)</option>
                        </select>
                    </div>
                    <div>
                        <label style="font-size:16px;" for="ingredients-input" class="form-label">Ingredients</label>
                        <input type="text" class="form-control" id="ingredients-input" name="ingredients"
                            value="<%= recipe.ingredients %>">
                    </div>
                    <button class="btn btn-primary" type="submit" class="">Update</button>
                </form>
            </div>
        </main>

        <%- include('./../partials/footer') %>